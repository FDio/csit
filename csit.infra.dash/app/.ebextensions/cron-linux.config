files:
    "/etc/cron.d/mycron":
        mode: "000644"
        owner: root
        group: root
        content: |
            SHELL=/bin/bash
            PATH=/sbin:/bin:/usr/sbin:/usr/bin
            MAILTO=root
            0 6 * * * root /bin/echo 'c' > /tmp/masterfifo

commands:
    remove_old_cron:
        command: "rm -f /etc/cron.d/mycron.bak"