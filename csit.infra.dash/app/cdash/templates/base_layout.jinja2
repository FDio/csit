{% extends "layout.jinja2" %}

{% block content %}
<div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">

  <header class="mb-auto">
    <div>
      <h3 class="float-md-start mb-0 text-white">CSIT-Dash</h3>
    </div>
  </header>

  <main class="px-3">
    <img class="d-block mx-auto mb-4" src="{{ url_for('static', filename='img/logo.svg') }}" alt="" width="72" height="57">
    <h1 class="text-white">{{ title }}</h1>
    <p class="lead">{{ description }}</p>
    <p class="lead">
      <a href="/trending/" class="badge me-1 p-2 text-decoration-none text-dark bg-light">{{ trending_title }}</a>
      <a href="/report/" class="badge me-1 p-2 text-decoration-none text-dark bg-light">{{ report_title }}</a>
      <a href="/stats/" class="badge me-1 p-2 text-decoration-none text-dark bg-light">{{ stats_title }}</a>
      <a href="/news/" class="badge me-1 p-2 text-decoration-none text-dark bg-light">{{ news_title }}</a>
    </p>
  </main>

  <footer class="mt-auto text-white-50">
    <p>Copyright Â© 2016-2022 <a href="https://fd.io" class="text-white">The Fast Data Project</a>, a series of LF Projects, LLC.</p>
  </footer>
</div>
{% endblock %}
