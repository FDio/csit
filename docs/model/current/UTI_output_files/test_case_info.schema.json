{
    "$id": "https://fd.io/FIXME/CSIT/UTI/test_case/info/0.1.0",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "description": "Schema for info output of test case.",
    "type": "object",
    "required": [
        "duration",
        "end_time",
        "log",
        "message",
        "results",
        "start_time",
        "status",
        "sut_type",
        "sut_version",
        "tags",
        "test_documentation",
        "test_id",
        "test_name",
        "test_type",
        "version",
    ],
    "properties": {
        "duration": { "$ref": "#/$defs/type_block/nonnegative_number" },
        "end_time": { "$ref": "#/$defs/type_block/date_time" },
        "log": {
            "type": "array",
            "items": { "type": "object", }
        },
        "message": { "type": "string" },
        "results": {
            "oneOf": [
                {
                    "type": "object",
                    "required": [ "mrr" ],
                    "properties": { "$ref": "#/$defs/property_block/mrr" }
                },
                {
                    "type": "object",
                    "required": [ "mrr" ],
                    "properties": { "$ref": "#/$defs/property_block/mrr" },
                },
                {
                    "type": "object",
                    "required": [ "mrr" ],
                    "properties": { "$ref": "#/$defs/property_block/mrr" },
                }
            ]
        },
        "start_time": { "$ref": "#/$defs/type_block/date_time" },
        "status": {
            "type": "string",
            "enum": [ "PASS", "FAIL" ]
        },
        "sut_type": {
            "type": "string",
            "enum": [ "VPP", "DPDK" ],
            "description": "TODO: What to do with TRex tests?"
        },
        "sut_version": { "type": "string" },
        "tags": {
            "type": "array",
            "items": { "type": "string" },
        },
        "test_documentation": { "type": "string" },
        "test_id": { "type": "string" },
        "test_name": { "type": "string" },
        "test_type": {
            "type": "string",
            "enum": [ "mrr", "ndrpdr", "soak" ]
        },
        "version": {
            "type": "string",
            "pattern": "^[0-9]+\.[0-9]+\.[0-9]+$"
        }
    },
    "$defs": {
        "type_block": {
            "nonnegative_number": {
                "type": "number",
                "minimum": 0
            },
            "date_time": {
                "type": "string",
                "format": "date-time"
            },
            "tps_unit": {
                "type": "string",
                "enum": [ "pps", "cps" ]
            }
        },
        "property_block": {
            "npdr": {
                "type": "object",
                "required": [ "lower", "upper" ],
                "properties": {
                    "lower": { "$ref": "#/$defs/type_block/nonnegative_number" },
                    "upper": { "$ref": "#/$defs/type_block/nonnegative_number" },
                    "lower_gbps": { "$ref": "#/$defs/type_block/nonnegative_number" },
                    "upper_gbps": { "$ref": "#/$defs/type_block/nonnegative_number" }
                }
            },
            "percent": {
                "type": "object",
                "required": [ "avg", "hdrh", "max", "min" ],
                "properties": {
                    "avg": { "$ref": "#/$defs/type_block/nonnegative_number" },
                    "hdrh": { "type": "string" },
                    "max": { "$ref": "#/$defs/type_block/nonnegative_number" },
                    "min": { "$ref": "#/$defs/type_block/nonnegative_number" }
                }
            },
            "latency": {
                "type": "object",
                "required": [ "pdr0", "pdr10", "pdr50", "pdr90" ],
                "properties": {
                    "pdr0": { "$ref": "#/$defs/property_block/percent" },
                    "pdr10": { "$ref": "#/$defs/property_block/percent" },
                    "pdr50": { "$ref": "#/$defs/property_block/percent" },
                    "pdr90": { "$ref": "#/$defs/property_block/percent" }
                }
            },
            "mrr": {
                "type": "object",
                "required": [ "avg", "samples", "stdev", "unit" ],
                "properties": {
                    "avg": { "$ref": "#/$defs/type_block/nonnegative_number" },
                    "samples": {
                        "type": "array"
                        "items": { "$ref": "#/$defs/type_block/nonnegative_number" },
                    },
                    "stdev": { "$ref": "#/$defs/type_block/nonnegative_number" },
                    "unit": { "$ref": "#/$defs/type_block/tps_unit" },
                }
            },
            "ndrpdr": {
                "type": "object",
                "required": [ "ndr", pdr, "unit" ],
                "properties": {
                    "latency_forward": { "$ref": "#/$defs/property_block/latency" },
                    "latency_reverse": { "$ref": "#/$defs/property_block/latency" },
                    "ndr": { "$ref": "#/$defs/property_block/npdr" },
                    "pdr": { "$ref": "#/$defs/property_block/npdr" },
                    "unit": { "$ref": "#/$defs/type_block/tps_unit" },
                }
            },
            "soak": {
                "type": "object",
                "required": [ "lower", "upper", "unit" ],
                "properties": {
                    "lower": { "$ref": "#/$defs/type_block/nonnegative_number" },
                    "upper": { "$ref": "#/$defs/type_block/nonnegative_number" },
                    "unit": { "$ref": "#/$defs/type_block/tps_unit" },
                }
            }
        }
    }
}
